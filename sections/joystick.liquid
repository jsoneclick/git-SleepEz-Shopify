<script>
 function handleMouseHover(event) {
  var joystickArea = document.querySelector('.joystick-area');
  var centerX = joystickArea.offsetWidth / 2;
  var centerY = joystickArea.offsetWidth / 2;
  var mouseX = (event.clientX - joystickArea.getBoundingClientRect().left - centerX) * 0.15; // Adjust the scaling factor as needed
  var mouseY = (event.clientY - joystickArea.getBoundingClientRect().top - centerY) * 0.15; // Adjust the scaling factor as needed

  // Update the position of the middle circle
  var mouseHoverCircle = document.getElementById('mouse-hover-circle');
  mouseHoverCircle.style.left = centerX + mouseX + 'px';
  mouseHoverCircle.style.top = centerY + mouseY + 'px';
}

// Function to handle mouse out events
function handleMouseOut() {
  // Reset the position of the middle circle to the center
  var mouseHoverCircle = document.getElementById('mouse-hover-circle');
  mouseHoverCircle.style.left = '50%';
  mouseHoverCircle.style.top = '50%';
}

// Add event listeners for mouse hover and mouse out on the joystick area
var joystickArea = document.querySelector('.joystick-area');
joystickArea.addEventListener('mousemove', handleMouseHover);
joystickArea.addEventListener('mouseout', handleMouseOut);

  
  colorLastWords("{{ section.settings.header }}", 'joystick-header', 1);
</script>

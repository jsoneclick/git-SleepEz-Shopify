<style>
    #shopify-section-{{ section.id }} {
      padding: 4rem;
      display: flex;
      justify-content: start;
      align-items: start;
      flex-direction: column;
      background-color: {{section.settings.background_color}};
      background: {{section.settings.background_gradient}};
      color: #000;
      gap: 0rem;
    }
  h1 {
    font-size: var(--text-h1);
  }
  h2 {
    font-size: var(--text-h2);
  }
  h3 {
    font-size: var(--text-h3);
  } 
  h4 {
    font-size: var(--text-h4);
  }
  h5 {
    font-size: var(--text-h5);
  }
  h6 {
    font-size: var(--text-h6);
  }
  #shopify-section-{{ section.id }} .last-word {
      color: {{ section.settings.header_span_color }}; 
    }
    #shopify-section-{{ section.id }} #joystick-header {
      text-align: start;
      width: 100%;
      line-height: normal;
    }
  #shopify-section-{{ section.id }} .content-wrapper {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    width: 100%;
  }
  #shopify-section-{{ section.id }} .main-image-wrapper {
    height: 500px;
  }
  #shopify-section-{{ section.id }} .main-image-wrapper img{
    height: 100%;
    width: auto;
  }
  #shopify-section-{{ section.id }} .joystick {
    aspect-ratio: 1 / 1;
    height: 400px;
    position: relative;
    cursor: none;
  }
  #shopify-section-{{ section.id }} .sides-span, #shopify-section-{{ section.id }} .svg-arrows {
    position: absolute;
    height: 100%;
    width: 100%;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg {
    transform: translate(-50%, -50%);
  }
  
  #shopify-section-{{ section.id }} .sides-span span, #shopify-section-{{ section.id }} .svg-arrows svg  {
    position: absolute;
    transform: translate(-50%, -50%);
    color: #030303;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 130%; /* 26px */
    letter-spacing: 0.6px;
  } 
  #shopify-section-{{ section.id }} .svg-arrows svg {
    fill: black;
    transition: .4s;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:nth-child(5) {
    fill: black;
    transition: none;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:hover {
    fill: #0EC3FF;
    transform: translate(-50%, -50%) scale(1.05);
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(1)  {
    margin-top: -15px;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(2)  {
    margin-left: -15px;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(3)  {
    margin-left: 15px;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(4)  {
    margin-top: 15px;
  }
  
  #shopify-section-{{ section.id }} .sides-span span:nth-child(1) {
    top: 5%;
    left: 50%;
  }
  #shopify-section-{{ section.id }} .sides-span span:nth-child(2) {
    top: 50%;
    left: 5%;
  }
  #shopify-section-{{ section.id }} .sides-span span:nth-child(3) {
    top: 50%;
    left: 95%;
  }
  #shopify-section-{{ section.id }} .sides-span span:nth-child(4) {
    top: 95%;
    left: 50%;
  }

  #shopify-section-{{ section.id }} .svg-arrows svg:nth-child(1) {
    top: 30%;
    left: 50%;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:nth-child(2) {
    top: 50%;
    left: 30%;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:nth-child(3) {
    top: 50%;
    left: 70%;
  }
  #shopify-section-{{ section.id }} .svg-arrows svg:nth-child(4) {
    top: 70%;
    left: 50%;
  }

    #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(1) > .sides-span span:nth-child(1){
      font-size: 38px;
      color: red;
    }
    #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(2) > .sides-span span:nth-child(2){
        font-size: 38px;
        color: red;
    }
    #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(3) > .sides-span span:nth-child(3){
        font-size: 38px;
        color: red;
    }
    #shopify-section-{{ section.id }} .svg-arrows svg:hover:nth-child(4) > .sides-span span:nth-child(4){
        font-size: 38px;
        color: red;
    }

  #mouse-hover-circle {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .j-prose {
    position: absolute;
    top: 110%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 150%;
    text-align: center;
    color: #030303;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: 130%; /* 26px */
    letter-spacing: 0.6px;
  }

  @media screen and (max-width:990px){
    #shopify-section-{{ section.id }} {
      padding: 2rem 1rem 5rem 1rem;
    }
